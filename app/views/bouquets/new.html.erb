<div class=main-container>
   <div class=logo>
     <h1>Flower</h1>
     <h1>vase</h1>
    </div>
     <%= form_for(@bouquet, class: 'form-horizontal', role: 'form') do |f| %>
    <div class="bouquet-container">
       <div class=q1>
          <div class="col-12">
            <p>Q1. 好きなカフェは？</p>
           </div>
           <div class="col-6">
            <p><%= f.radio_button :question1, "1", id: "custom_id1" %>
            <label for="custom_id1">レトロなカフェ</label></p>
            <p><%= f.radio_button :question1, "2", id: "custom_id2" %>
            <label for="custom_id2">韓国風カフェ</label></p>
            <p><%= f.radio_button :question1, "3", id: "custom_id3" %>
            <label for="custom_id3">チェーン店カフェ</label></p>
            
          </div>
        </div>

        <div class=q2>
           <div class="col-12">
            <p>Q2. オフの日は？</p>
           </div> 
           <div class="col-6">
            <%= f.radio_button :question2, "1", id: "custom_id4" %>
            <label for="custom_id4">友達とお出かけ</label>
            <%= f.radio_button :question2, "2", id: "custom_id5" %>
            <label for="custom_id5">ひとりの時間を楽しむ</label>
           </div>  
        </div>

        <div class=q3>
           <div class="col-12">
            <p>Q3. 服を買うとき大事なのは？</p>
           </div>
           <div class="col-6">
            <%= f.radio_button :question3, "1", id: "custom_id6" %>
            <label for="custom_id6">その時に感じた直感的なもの</label>
            <%= f.radio_button :question3, "2", id: "custom_id7" %>
            <label for="custom_id7">長く使えるかどうか</label>
           </div>
        </div>
        <div class=q4>
           <div class="col-12">
            <p>Q4. 大切にしたいのは…</p>
            </div>
           <div class="col-6">
            <%= f.radio_button :question4, "1", id: "custom_id8" %>
            <label for="custom_id8">人との繋がり</label>
            <%= f.radio_button :question4, "2", id: "custom_id9" %>
            <label for="custom_id9">自分の信念</label>
           </div>
        </div>
    </div>
    <div class="sindanbotan">
        <%= f.submit " 結果 " %>
    </div>
    
<% end %>

<%= link_to "一覧に戻る", bouquets_path %>
</div>